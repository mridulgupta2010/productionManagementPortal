    <script>
        document.querySelectorAll('.toggle-text').forEach(function(link) {
    link.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default anchor behavior
        var td = this.parentElement; // Get the parent <td> of the clicked link
        var fullText = td.querySelector('.full-text'); // Find the .full-text span within this <td>
        
        // Toggle the hidden class to show/hide the full text
        if (fullText.classList.contains('hidden')) {
            fullText.classList.remove('hidden');
            this.textContent = 'Read less'; // Change link text
        } else {
            fullText.classList.add('hidden');
            this.textContent = 'Read more'; // Change link text back
        }
    });
});
    </script>
    <script>
        document.getElementById('statusFilter').addEventListener('change', function() {
            var selectedStatus = this.value;
            document.querySelectorAll('tbody tr').forEach(function(row) {
                // Safely try to find the status using the class
                var statusElement = row.querySelector('.order-status');
                if (statusElement) { // Check if the element exists
                    var status = statusElement.textContent.trim();
                    if (selectedStatus === 'All' || status === selectedStatus) {
                        row.style.display = ''; // Show row
                    } else {
                        row.style.display = 'none'; // Hide row
                    }
                }
            });
        });
        $(document).ready(function() {
            $('#customerNameFilter').on('input', function() {
                var filterValue = $(this).val().trim().toLowerCase();

                $('tbody tr:nth-child(odd)').each(function() {
                    var customerName = $(this).find('.customer-name').text().trim().toLowerCase();

                    if (!filterValue || customerName.includes(filterValue)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
            $('#orderFilter').on('input', function() {
                var filterValue = $(this).val().trim().toLowerCase();

                $('tbody tr:nth-child(odd)').each(function() {
                    var orderName = $(this).find('.order-id').text().trim().toLowerCase();

                    if (!filterValue || orderName.includes(filterValue)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
        
        </script>
