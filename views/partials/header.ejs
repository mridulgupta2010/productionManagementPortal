                                                                            <th scope="row"><%= item.partNumber %></th>
                                                                            <td><%= item.description %></td>
                                                                            <td><%= item.quantity %></td>
                                                                        </tr>
                                                                    <% }); %>
                                                                    <!-- Add more parts as needed -->
                                                                </tbody>
                                                            </table>
                                                            
                                                        </div>
                                                    </form>    
                                                </td>
                                            </tr>
                                            <!-- Repeat for other orders -->
                                        <% }); %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
