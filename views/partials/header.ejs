                        <div class="row">
                            <div class="col-12">
                                
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="highlight">
                                            <th scope="col">
                                                <div class="mb-3">
                                                    <label for="orderFilter">Sales Order:</label>
                                                    <input type="text" id="orderFilter" class="form-control" placeholder="Enter sales order">
                                                </div>
                                            </th>
                                            <th scope="col">
                                                <div class="mb-3">
                                                    <label for="customerNameFilter">Filter by Sales Order:</label>
                                                    <input type="text" id="customerNameFilter" class="form-control" placeholder="Enter customer name">
                                                </div>
                                            </th>
                                            <th scope="col"></th>
                                            <th scope="col">
                                                <div class="filter-by-status mb-3">
                                                    <label for="statusFilter">Filter by Status:</label>
