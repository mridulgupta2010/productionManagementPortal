                                                        <option value="All">All</option>
                                                        <option value="In progress">In progress</option>
                                                        <option value="On hold">On hold</option>
                                                        <option value="Completed">Completed</option>
                                                        <option value="Waiting on parts">Waiting on parts</option>
                                                    </select>
                                                </div>
                                            </th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <thead>
                                        <tr class="highlight">
                                            <th scope="col">Sales order</th>
                                            <th scope="col">Customer Name</th>
                                            <th scope="col">Dispatch Date</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Notes</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.sort(function(a, b) {
                                            return a.dispatchDate - b.dispatchDate;
                                        }).forEach(function(order, index) { %>
                                            <tr>
                                                <th scope="row" class="order-id"><a href="#"><u><%= order.orderId %></u></a></th>
                                                <td class="customer-name"><%= order.customerName %></td>
                                                <td><%= order.dispatchDate.getDate() %>/<%= order.dispatchDate.getMonth() %>/<%= order.dispatchDate.getFullYear() %></td>
                                                <td class="order-status"><%= order.orderStatus %></td>
                                                <td style="position: relative;">
                                                    <span class="full-text hidden"><%= order.orderNotes %></span>
                                                    <a href="#" class="toggle-text">Read more</a>
                                                </td>
                                                <td>
                                                    <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#note<%= index %>" aria-expanded="false" aria-controls="note<%= index %>">
                                                        <i class="lni lni-write"></i> Update
                                                    </button>
                                                </td>
                                            </tr>
                                            <!-- Notes and Parts Row -->
                                            <tr id="note<%= index %>" class="collapse" >
                                                <td colspan="6" style="background-color: lightblue;">
                                                    <form action="/updateOrder" method="post">
                                                        <input type="hidden" name="orderId" value="<%= order.orderId %>">
                                                        <div class="container-fluid">
                                                            
                                                            <div class="row mb-3">
